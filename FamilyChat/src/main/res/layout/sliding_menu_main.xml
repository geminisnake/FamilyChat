<?xml version="1.0" encoding="utf-8"?>
<com.jeremyfeinstein.slidingmenu.lib.SlidingMenu xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#ebebeb"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_slidingmenu"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/example_avatar"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="样式"
            android:textSize="40sp"/>
    </LinearLayout>
    <ListView
        android:id="@+id/lv_slidingmenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_slidingmenu">

    </ListView>

</com.jeremyfeinstein.slidingmenu.lib.SlidingMenu>