<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@id/logo_myactionbar"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginLeft="15dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#ffffff"
        android:layout_centerVertical="true"
        android:background="@drawable/avatar_exam1"/>
    <TextView
        android:id="@id/title_myactionbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_myactionbar"
        android:textSize="20sp"
        android:textColor="#e2f7fa"
        android:layout_toRightOf="@id/logo_myactionbar"
        android:layout_toEndOf="@id/logo_myactionbar"
        android:layout_marginLeft="25dp"
        android:layout_centerVertical="true"/>

</RelativeLayout>