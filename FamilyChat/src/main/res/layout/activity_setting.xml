<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="60dp">
        <com.alienleeh.mylibrary.customUI.CircleImageView
            android:id="@+id/avatar_acti_setting"
            android:layout_marginLeft="25dp"
            android:layout_width="55dp"
            android:src="@drawable/example_avatar"
            android:layout_height="55dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="25dp"
            android:layout_height="45dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:text="啊哈，啊哈"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textSize="17sp"
                android:gravity="center_vertical"
                android:text="账号:lovetonia"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <include android:id="@id/msg_notify_setting_acti" layout="@layout/item_switch_button"/>
    <include android:id="@id/mode_tingtong_setting_acti" layout="@layout/item_switch_button"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#ebebeb"/>
    <include android:id="@id/not_disturb_setting_acti" layout="@layout/item_switch_button"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#ebebeb"/>
    <include android:id="@id/net_rec_setting_acti" layout="@layout/item_switch_button"/>
    <include android:id="@id/filter_notify_seting_acti" layout="@layout/item_switch_button"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#ebebeb"/>
    <include android:id="@id/clear_cachemsg_setting_acti" layout="@layout/item_switch_button"/>
    <include android:id="@id/about_me_setting_acti" layout="@layout/item_switch_button"/>
</LinearLayout>