<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#efeff7">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp">
    </LinearLayout>
    <FrameLayout
        android:id="@+id/conver_detail_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@id/swr_acti_conversation"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView
                android:id="@id/lv_conversation_message"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                android:descendantFocusability="afterDescendants"
                android:listSelector="@android:color/transparent"/>
        </android.support.v4.widget.SwipeRefreshLayout>
        <FrameLayout
            android:id="@id/layoutPlayAudio"
            android:layout_width="188dp"
            android:layout_height="188dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:background="@drawable/bg_audio_recoder">
            <Chronometer
                android:id="@id/audio_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textSize="45sp"
                android:textColor="@color/white"
                android:layout_gravity="center"/>
            <LinearLayout
                android:id="@+id/timer_tip_container"
                android:layout_width="188dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:gravity="center">
                <TextView
                    android:id="@+id/timer_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="向上滑动，取消发送"
                    android:textColor="@color/white"
                    android:textSize="20sp"/>
            </LinearLayout>
        </FrameLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@id/input_panel"
        layout="@layout/reply_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
