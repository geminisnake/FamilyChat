<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:orientation="vertical"
	android:padding="5dp">
	<TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:id="@+id/tv_sms_time"
	    android:text="2015/05/24"
	    android:layout_gravity="center_horizontal"
	    android:background="@drawable/bg_textview_msg_time"
	    android:textColor="#ffffff"
	    android:gravity="center"
	    android:paddingLeft="5dp"
	    android:paddingRight="5dp"
	    android:paddingTop="3dp"
	    android:paddingBottom="3dp"
	    android:layout_margin="15dp"
	    android:visibility="visible"/>
    <TextView 
        android:id="@+id/tv_sms_received"
        android:layout_width="wrap_content"
        android:minWidth="70dp"
        android:layout_height="wrap_content"
        android:paddingLeft="23dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginRight="60dp"
        android:text="a"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@drawable/bg_receive_sms"/>
    <TextView 
        android:id="@+id/tv_sms_send"
        android:layout_width="wrap_content"
        android:minWidth="70dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:paddingRight="23dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="60dp"
        android:text="assssss"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@drawable/bg_send_sms"/>
</LinearLayout>
