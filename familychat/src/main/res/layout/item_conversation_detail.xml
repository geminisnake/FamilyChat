<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#efeff7"
    android:padding="5dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_sms_time"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/msg_time"
        android:textColor="#ffffff"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:layout_margin="15dp"
        android:visibility="visible"/>
    <LinearLayout
        android:id="@id/check_dismiss_conver1"
        android:layout_width="match_parent"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="7dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@id/himavatar_conversation"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/dddddddddefault"
            android:focusable="false"
            android:clickable="true"/>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@id/tv_msg_received"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="60dp"
            android:focusable="false"
            android:background="@drawable/selector_msg_received"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@id/check_dismiss_conver2"
        android:layout_width="match_parent"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="7dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@id/tv_msg_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:layout_marginLeft="60dp"
            android:layout_toLeftOf="@id/selfavatar_conversation"
            android:focusable="false"
            android:background="@drawable/selector_msg_send"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@id/selfavatar_conversation"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="4dp"
            android:layout_gravity="right"
            android:focusable="false"
            android:clickable="true"
            android:src="@drawable/dddddddddefault"/>
    </RelativeLayout>

</LinearLayout>
