<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#f6f8ff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:padding="9dp">
        <ImageView
            android:id="@id/infoact_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="18dp"
            android:layout_gravity="center_vertical" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:weightSum="3"
            android:layout_marginLeft="28dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:id="@id/infoact_displayname"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="diaplayname"
                    android:textSize="15sp"/>
                <ImageView
                    android:id="@id/infoact_gender"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
            <TextView
                android:id="@id/infoact_accid"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="4dp"
                android:text="亲聊账号:"
                android:textSize="12sp"
                android:layout_weight="1"/>
            <TextView
                android:id="@id/infoact_nickname"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:text="昵称:"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:background="#ffffff">
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="生日"
            android:textSize="16sp"
            android:layout_marginLeft="27dp"/>
        <TextView
            android:id="@id/infoact_birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="28dp"
            android:text="1989"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:background="#ffffff">
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="地区"
            android:textSize="16sp"
            android:layout_marginLeft="27dp"/>
        <TextView
            android:id="@id/infoact_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="28dp"
            android:text="浙江   杭州"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ebebeb"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="#ffffff">
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="手机"
            android:textSize="16sp"
            android:layout_marginLeft="27dp"/>
        <TextView
            android:id="@id/infoact_mb_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="28dp"
            android:text="0537-110"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ebebeb"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="#ffffff">
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="邮箱"
            android:textSize="16sp"
            android:layout_marginLeft="27dp"/>
        <TextView
            android:id="@id/infoact_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="28dp"
            android:text="alienleeh@foxmail.com"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:background="#ffffff">
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="签名"
            android:textSize="16sp"
            android:layout_marginLeft="27dp"/>
        <TextView
            android:id="@id/infoact_signed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="28dp"
            android:text="1989"/>
    </LinearLayout>
        <Button
            android:id="@id/infoact_bt1"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="47dp"
            android:layout_marginRight="47dp"
            android:layout_width="match_parent"
            android:text="聊天"
            android:textSize="19sp"
            android:textColor="#ffffff"
            android:background="#6275df"
            android:layout_height="40dp" />
        <Button
            android:id="@id/infoact_bt2"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="47dp"
            android:layout_marginRight="47dp"
            android:layout_width="match_parent"
            android:text="视频通话"
            android:textSize="19sp"
            android:textColor="#6275df"
            android:background="#ffffff"
            android:layout_height="40dp" />

</LinearLayout>